#include <stdio.h>
#include <stdlib.h>
#include <time.h>

// Estrutura que representa uma pe√ßa do Tetris. Cada pe√ßa tem:
  // - nome: caractere ('I', 'O', 'T', 'L')
  // - id: n√∫mero inteiro √∫nico que identifica a pe√ßa
typedef struct {
    char nome;
    int id;
} Peca;

// Estrutura da FILA circular - capacidade fixa de 5
typedef struct {
    Peca pecas[5];
    int inicio;
    int fim;
    int tamanho;
} Fila;

// Estrutura da PILHA - capacidade fixa de 3
typedef struct {
    Peca pecas[3];
    int topo;
} Pilha;

// Fun√ß√£o: gerarPeca - Gera uma nova pe√ßa aleat√≥ria com ID exclusivo
Peca gerarPeca(int id) {
    char tipos[] = {'I', 'O', 'T', 'L'};
    Peca nova;
    nova.nome = tipos[rand() % 4];
    nova.id = id;
    return nova;
}

// Fun√ß√£o: inicializarFila - Prepara a fila para uso
void inicializarFila(Fila *f) {
    f->inicio = 0;
    f->fim = 0;
    f->tamanho = 0;
}

// Fun√ß√£o: inicializarPilha - Prepara a pilha para uso
void inicializarPilha(Pilha *p) {
    p->topo = -1;
}

// Fun√ß√£o: enfileirar - Adiciona uma nova pe√ßa ao final da fila se houver espa√ßo
void enfileirar(Fila *f, Peca nova) {
    if (f->tamanho == 5) {
        printf("Fila cheia! N√£o √© poss√≠vel adicionar nova pe√ßa.\n");
        return;
    }

    f->pecas[f->fim] = nova;
    f->fim = (f->fim + 1) % 5;
    f->tamanho++;
}

// Fun√ß√£o: desenfileirar - Remove a pe√ßa da frente da fila
Peca desenfileirar(Fila *f) {
    Peca removida = {'-', -1};
    if (f->tamanho == 0) {
        printf("Fila vazia!\n");
        return removida;
    }

    removida = f->pecas[f->inicio];
    f->inicio = (f->inicio + 1) % 5;
    f->tamanho--;
    return removida;
}

// Fun√ß√£o: empilhar - Adiciona uma nova pe√ßa ao topo da pilha se houver espa√ßo
void empilhar(Pilha *p, Peca nova) {
    if (p->topo == 2) {
        printf("Pilha cheia! N√£o √© poss√≠vel reservar mais pe√ßas.\n");
        return;
    }
    p->pecas[++(p->topo)] = nova;
}

// Fun√ß√£o: desempilhar - Remove a pe√ßa do topo da pilha
Peca desempilhar(Pilha *p) {
    Peca removida = {'-', -1};
    if (p->topo == -1) {
        printf("Pilha vazia!\n");
        return removida;
    }
    removida = p->pecas[p->topo--];
    return removida;
}

// Fun√ß√£o: exibirFila - Mostra o estado atual da fila
void exibirFila(Fila *f) {
    printf("Fila de pe√ßas: ");
    if (f->tamanho == 0) {
        printf("(vazia)\n");
        return;
    }

    int i = f->inicio;
    for (int c = 0; c < f->tamanho; c++) {
        printf("[%c %d] ", f->pecas[i].nome, f->pecas[i].id);
        i = (i + 1) % 5;
    }
    printf("\n");
}

// Fun√ß√£o: exibirPilha- Mostra o estado atual da pilha do topo √† base
void exibirPilha(Pilha *p) {
    printf("Pilha de reserva (Topo -> Base): ");
    if (p->topo == -1) {
        printf("(vazia)\n");
        return;
    }

    for (int i = p->topo; i >= 0; i--) {
        printf("[%c %d] ", p->pecas[i].nome, p->pecas[i].id);
    }
    printf("\n");
}

// Fun√ß√£o: trocarPe√ßaAtual - Troca a pe√ßa da frente da fila com o topo da pilha
void trocarPecaAtual(Fila *f, Pilha *p) {
    if (f->tamanho == 0 || p->topo == -1) {
        printf("Imposs√≠vel trocar: uma das estruturas est√° vazia.\n");
        return;
    }

    int i = f->inicio;
    Peca temp = f->pecas[i];
    f->pecas[i] = p->pecas[p->topo];
    p->pecas[p->topo] = temp;

    printf("Troca simples realizada entre a frente da fila e o topo da pilha.\n");
}

// Fun√ß√£o: trocaMultipla - Troca as tr√™s primeiras pe√ßas da fila com as tr√™s da pilha
void trocaMultipla(Fila *f, Pilha *p) {
    if (f->tamanho < 3 || p->topo < 2) {
        printf("N√£o h√° pe√ßas suficientes para a troca m√∫ltipla.\n");
        return;
    }

    // Realiza a troca entre as 3 primeiras da fila e as 3 da pilha
    int i = f->inicio;
    for (int k = 0; k < 3; k++) {
        Peca temp = f->pecas[(i + k) % 5];
        f->pecas[(i + k) % 5] = p->pecas[p->topo - k];
        p->pecas[p->topo - k] = temp;
    }

    printf("Troca m√∫ltipla realizada entre as 3 primeiras da fila e as 3 da pilha.\n");
}

// Fun√ß√£o principal: main - Controla o menu de opera√ß√µes entre fila e pilha
int main() {
    srand(time(NULL));

    Fila fila;
    Pilha pilha;
    inicializarFila(&fila);
    inicializarPilha(&pilha);

    int idGlobal = 0; // contador de IDs √∫nicos

    // Inicializa a fila com 5 pe√ßas
    for (int i = 0; i < 5; i++) {
        enfileirar(&fila, gerarPeca(idGlobal++));
    }

    int opcao;
    do {
        printf("\n-------------------------------------------\n");
        exibirFila(&fila);
        exibirPilha(&pilha);
        printf("-------------------------------------------\n");

        printf("Menu de a√ß√µes:\n");
        printf("1 - Jogar pe√ßa (remover da fila)\n");
        printf("2 - Reservar pe√ßa (fila -> pilha)\n");
        printf("3 - Usar pe√ßa reservada (remover da pilha)\n");
        printf("4 - Trocar pe√ßa da fila com o topo da pilha\n");
        printf("5 - Troca m√∫ltipla (3 da fila ‚Üî 3 da pilha)\n");
        printf("0 - Sair\n");
        printf("Escolha: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1: {
                Peca jogada = desenfileirar(&fila);
                if (jogada.id != -1)
                    printf("Pe√ßa jogada: [%c %d]\n", jogada.nome, jogada.id);

                enfileirar(&fila, gerarPeca(idGlobal++));
                break;
            }

            case 2: {
                Peca reservada = desenfileirar(&fila);
                if (reservada.id != -1) {
                    empilhar(&pilha, reservada);
                    printf("Pe√ßa reservada: [%c %d]\n", reservada.nome, reservada.id);
                    enfileirar(&fila, gerarPeca(idGlobal++));
                }
                break;
            }

            case 3: {
                Peca usada = desempilhar(&pilha);
                if (usada.id != -1)
                    printf("Pe√ßa usada da reserva: [%c %d]\n", usada.nome, usada.id);
                break;
            }

            case 4:
                trocarPecaAtual(&fila, &pilha);
                break;

            case 5:
                trocaMultipla(&fila, &pilha);
                break;

            case 0:
                printf("üèÅ Encerrando o jogo...\n");
                break;

            default:
                printf("Op√ß√£o inv√°lida!\n");
        }

    } while (opcao != 0);

    return 0;
}
